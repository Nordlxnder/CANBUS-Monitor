#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition

<Name_des_werts@Label>
    background_color: 1,1,1, 0.1
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
        #source: 'HD_rahmen.png'
    font_size: 30
    size_hint: 1, 0.3
    color: 0,0,0,1
    valign: 'bottom'

<Wert@Label>:
    font_size: 40
    color: 1,1,1,1
    text_size: self.size
    halign: 'right'
    valign: 'middle'

<Einheit@Label>:
    font_size: 40
    color: 1,1,1,1
    text_size: self.size
    halign: 'left'
    valign: 'middle'
############
# Anzeige
############
<CAN_Wert_Anzeige>:
    BoxLayout:
        orientation: 'vertical'
        #canvas.after:
        #    Rectangle:
        #        pos: self.pos
        #        size: self.size
                #source: 'HD_rahmen.png'
        Name_des_werts:
            id: n1
            text: 'Name'
        BoxLayout:
            Wert:
                id: w1
                text: 'Wert'
            Einheit:
                id: e1
                text: ' Einheit'

###### Hauptfenster ######
<Hauptbildschirm>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: l1
            text: ''

        BoxLayout:
            size_hint: 1,0.2
            Button:
                text: "Konfiguration"
                on_release:
                    root.manager.transition = NoTransition()
                    app.root.current="bsk"
            Button:
                text: "Canwerte anzeigen"
                on_release:
                    root.manager.transition = NoTransition()
                    app.root.current="bs1cw"
            Button:
                text: 'Schliessen'
                on_release: app.stop()

###### Konfigurationsfenster ######
<Bildschirm_Konfiguration>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Konfiguration'
        BoxLayout:
            size_hint: 1,0.2
            Button:
                text: 'zur端ck'
                on_release:
                    root.manager.transition = NoTransition()
                    app.root.current="hbs"
            Button:
                text: 'DBC Datei laden'


###### Bildschirm1 Canwerte ######

