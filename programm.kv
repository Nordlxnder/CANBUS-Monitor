            Konf:
                id: a4
                text: " "
            Konf:
                id: a5
                text: " "
            Konf:
                id: a6
                text: " "
            Konf:
                id: a7
                text: " "
            Konf:
                id: a8
                text: " "
            Konf:
                id: a9
                text: " "
            Konf:
                id: a10
                text: " "
        BoxLayout:
            padding: 5
            spacing: 5
            size_hint: 1,0.2
            Button1:
                text: 'zurück'
                on_release:
                    root.manager.transition = SlideTransition()
                    root.manager.transition.duration = 0.6
                    root.manager.transition.direction = 'up'
                    app.root.current="hbs"
            Button1:
                text: 'Baudrate setzen'
                on_release:
                    root.manager.transition = SlideTransition()
                    root.manager.transition.duration = 0.6
                    root.manager.transition.direction = 'left'
                    app.root.current="bsb"

###### Baudrate Baudrate_aendern ######
<Baudrate_aendern>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Bilder/s0_hintergrund.png'
    BoxLayout:
        padding: 50
        spacing: 10
        orientation: 'vertical'
        Label:
            id: l1
            text: "Baudrate setzen"
            color: 0,1,0,1
            font_size: 20
            markup: True
        Label:
            id:l2
            text: ' '
        Button1:
            text: '1000 kBaud'
            on_release:
                root.baudrate('1000 kHz')
        Button1:
            text: '500 kBaud'
            on_release:
                root.baudrate('500 kHz')
        Button1:
            text: '250 kBaud'
            on_release:
                root.baudrate('250 kHz')

        #size_hint: 1,0.2
        Button1:
            text: 'zurück'
            on_release:
                root.manager.transition = SlideTransition()
                root.manager.transition.duration = 0.6
                root.manager.transition.direction = 'up'
                app.root.current="hbs"

