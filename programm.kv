        orientation: 'vertical'
        Label:
            size_hint: 1,0.1
            text: 'CAN Werte Fenster 1'
        GridLayout:
            name: 'botschaft'
            rows: 2
            padding: 1
            spacing: 1
            CAN_Wert_Anzeige:
                id: a1
            CAN_Wert_Anzeige:
                id: a2
            CAN_Wert_Anzeige:
                id: a3
            CAN_Wert_Anzeige:
                id: a4
        BoxLayout:
            size_hint: 1,0.2
            Button:
                text: 'zur端ck'
                on_release:
                    root.manager.transition = NoTransition()
                    app.root.current="hbs"
            Button:
                text: 'Weitere Canwerte'
                on_release:
                    root.manager.transition = NoTransition()
                    app.root.current="bs2cw"

