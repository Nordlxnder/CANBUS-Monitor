#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import NoTransition kivy.uix.screenmanager.NoTransition

<Name_des_werts@Label>
    canvas.before:
        Color:
            rgb:1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
        #source: 'HD_rahmen.png'
    font_size: 30
    size_hint: 1, 0.3
    color: 0,0,0,1
    valign: 'bottom'

<Wert@Label>:
    font_size: 40
    color: 1,1,1,1
    text_size: self.size
    halign: 'right'
    valign: 'middle'

<Einheit@Label>:
    font_size: 40
    color: 1,1,1,1
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<Konf@Label>:
    font_size: 33
    color: 1,1,1,1
    text_size: self.size
    halign: 'left'
    #size_hint: 1,0.1
    #valign: 'middle'

<Button1@Button>:
    font_size:  20
    background_normal: './Bilder/s0_schliessen_n.png'
    background_down: './Bilder/s0_schliessen_d.png'


##################################################################################

############
# Anzeige
############
<CAN_Wert_Anzeige>:
    BoxLayout:
        orientation: 'vertical'
        #canvas.after:
        #    Rectangle:
        #        pos: self.pos
        #        size: self.size
                #source: 'HD_rahmen.png'
        Name_des_werts:
            id: n1
            text: 'Name'
        BoxLayout:
            Wert:
                id: w1
                text: 'Wert'
            Einheit:
                id: e1
                text: ' Einheit'

###### Hauptfenster ######
<Hauptbildschirm>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: './Bilder/s0_start.png'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: l1
            font_size: 40
            text: ''

        BoxLayout:
            size_hint: 1,0.2
            padding: 5
            spacing: 5
            Button1:
                text: "Konfiguration"
                on_release:
                    root.manager.transition = SlideTransition()
                    root.manager.transition.duration = 0.3
                    root.manager.transition.direction = 'down'
                    app.root.current="bsk"

            Button1:
                text: "Canwerte anzeigen"
                on_release:
                    root.canwerte1_lesen()
                    root.canwerte1_anzeigen()
                    root.manager.transition = SlideTransition()
                    root.manager.transition.duration = 0.6
                    root.manager.transition.direction = 'left'
                    app.root.current="bs1cw"

            Button1:
                text: 'Schliessen'
                on_release:
                    root.stop()
                    app.stop()


###### Konfigurationsfenster ######
